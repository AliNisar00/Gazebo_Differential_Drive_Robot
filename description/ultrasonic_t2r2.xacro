<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="ultrasonic_t2r2_joint" type="fixed">
        <parent link="cart2"/>
        <child link="ultrasonic_t2r2"/>
        <origin xyz="1.7 0.55 1" rpy="0 0 ${pi/2}"/>
    </joint>

    <link name="ultrasonic_t2r2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.05"/>
            </geometry>
            <material name="custom_orange4"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <material name="custom_orange4">
        <color rgba="1 0.53 0 1"/>
    </material>

    <gazebo reference="ultrasonic_t2r2">
        <material>
            <ambient>1 0.53 0 1</ambient>
            <diffuse>1 0.53 0 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
            <emissive>0 0 0 1</emissive>
        </material>
        <sensor name="ultrasonic_t2r2" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray> 
                <scan>
                    <horizontal>
                        <samples>15</samples>
                        <min_angle>-0.4363</min_angle>
                        <max_angle>0.4363</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>3.6</max>
                </range>            
            </ray>
            <plugin name="ultrasonic_t2r2_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>ultrasonic_t2r2</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>
