<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.3 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.8225 0 0.85" rpy="0 0 0"/>
            <geometry>
                <box size="1.645 0.8 1.8"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.8225 0 0.85" rpy="0 0 0"/>
            <geometry>
                <box size="1.645 0.8 1.8"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="50" x="1.645" y="0.8" z="1.8">
            <origin xyz="0.8225 0 0.85" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.4 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.2" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.2" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.1" radius="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.4 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.2" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.2" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.1" radius="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="1.4 0 -0.1" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="5" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.15"/>
        <mu2 value="0.15"/>
    </gazebo>


    <!-- Cart 1: Bumper Doley -->
    <joint name="cart_joint" type="revolute">
        <parent link="chassis"/>
        <child link="cart"/>
        <origin xyz="-1.5334 0 0" rpy="0 0 ${pi}"/>
        <axis xyz="0 0 1"/>
        <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
    </joint>

    <link name="cart">
        <visual>
            <origin xyz="0.9 0 0.7" rpy="0 0 0"/>
            <geometry>
                <box size="3.315 1.3 1.5"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.9 0 1.12" rpy="0 0 0"/>
            <geometry>
                <box size="3.315 1.3 1.5"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="50" x="3.315" y="1.3" z="1.5">
            <origin xyz="0.9 0 1.12" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Cart Left Wheel -->
    <joint name="cart_left_wheel_joint" type="continuous">
        <parent link="cart"/>
        <child link="cart_left_wheel"/>
        <origin xyz="2.2 0.6 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="cart_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.2" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="cart_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Cart Right Wheel -->
    <joint name="cart_right_wheel_joint" type="continuous">
        <parent link="cart"/>
        <child link="cart_right_wheel"/>
        <origin xyz="2.2 -0.6 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="cart_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.2" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="cart_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- 2.3334 -->
    <!-- Cart 2: Grill Doley -->
    <joint name="cart2_joint" type="revolute">
        <parent link="cart"/>
        <child link="cart2"/>
        <origin xyz="3.2334 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
    </joint>

    <link name="cart2">
        <visual>
            <origin xyz="0.9 0 0.7" rpy="0 0 0"/>
            <geometry>
                <box size="1.8 1.11 1.5"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.9 0 1.12" rpy="0 0 0"/>
            <geometry>
                <box size="1.8 1.11 1.5"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="20" x="1.8" y="1.11" z="1.5">
            <origin xyz="0.9 0 1.12" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="cart2_left_wheel_joint" type="continuous">
        <parent link="cart2"/>
        <child link="cart2_left_wheel"/>
        <origin xyz="1.6 0.55 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="cart2_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.2" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="cart2_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="cart2_right_wheel_joint" type="continuous">
        <parent link="cart2"/>
        <child link="cart2_right_wheel"/>
        <origin xyz="1.6 -0.55 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="cart2_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.2" radius="0.15" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.2" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="cart2_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>